// Question 1
// Loower Bound

class Solution {
     
    int lowerBound(int[] arr, int target) {
        // code here
        
        int ans = arr.length;
        for(int i = 0; i<arr.length; i++){
            if(target == arr[i] || target<arr[i]){
                ans  = i;
                break;
            }
        }
        
        return ans;
    }
}


// Question 2
// Uppper Bound

class Solution {
    int upperBound(int[] arr, int target) {
        // code here
        for(int i = 0; i<arr.length ; i++){
            if(arr[i]>target){
                return i;
            }
        }
        return arr.length;
    }
}


// Question 3
// koko eating banana

class Solution {
    public int check(int[] piles, int k) {
        int count = 0;
        for (int pile : piles) {
            count += (int)Math.ceil((double)pile / k);
        }
        return count;
    }

    public int minEatingSpeed(int[] piles, int h) {
        int lp = 1;
        int rp = Arrays.stream(piles).max().getAsInt();
        int ans = rp;

        while (lp <= rp) {
            int mid = lp + (rp - lp) / 2;
            int ch = check(piles, mid);

            if (ch <= h) {
                ans = mid;
                rp = mid - 1;
            } else {
                lp = mid + 1;
            }
        }

        return ans;
    }
}

// Question 6
// level order traversal

/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {

    public int height(TreeNode root){
        if(root==null)return 0;

        int l = height(root.left);
        int r = height(root.right);

        return 1+Math.max(l,r);
    }

    public void Nth(TreeNode root, List<Integer> l, int i){

         if (root == null) return;
         
        if(i==1){

            l.add(root.val);
            return;

        }
        Nth(root.left, l, i-1);
        Nth(root.right, l, i-1);
    }
    public List<List<Integer>> levelOrder(TreeNode root) {

        int h = height(root);

        List<List<Integer>> ans = new ArrayList<>();

        for(int i = 1; i<=h; i++){
            List<Integer> arr = new ArrayList<>();
            Nth(root, arr, i);
            ans.add(new ArrayList<>(arr));
        }

        return ans;
    }
}


// Question 7
// Symmetric Tree

/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public boolean Helper(TreeNode l,TreeNode r ){
        if(l== null &&  r==null){
            return true;
        }
        if(l==null || r==null){
            return false;
        }
        if(l.val!=r.val ){
            return false;
        }

        return Helper(l.left,r.right) && Helper(l.right,r.left);
    }
    public boolean isSymmetric(TreeNode root) {
        if(root.val!=root.val){
            return false;

        }

        return Helper(root.left,root.right);


    }
}
